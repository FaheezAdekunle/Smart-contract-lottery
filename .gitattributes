# ----------------------------
# GitHub Linguist Overrides
# ----------------------------

# Count Solidity files as the main language
*.sol linguist-detectable=true
*.sol linguist-language=Solidity

# Ignore vendored dependencies (like forge-std, openzeppelin, chainlink, etc.)
lib/* linguist-vendored

# Ignore build artifacts
out/* linguist-vendored
cache/* linguist-vendored
broadcast/* linguist-vendored

# Ignore environment and configs
.env linguist-vendored
foundry.toml linguist-vendored

# Optional: if you have scripts in JS/TS/Python, mark them as non-detectable
script/**/*.js linguist-detectable=false
script/**/*.ts linguist-detectable=false
script/**/*.py linguist-detectable=false
